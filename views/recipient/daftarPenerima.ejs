    <table>
        <tr>
            <th>ID</th>
            <th>Nama Penerima</th>
            <th>Perusahaan Penerima</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        <% for(let a = 0; a < data.length; a++){ %>
        <tr>
            <td><%= data[a].id %></td>
            <td><%= data[a].name %></td>
            <td><%= data[a].company_recipient %></td>
            <td><a href="/recipient/<%= data[a].id %>/delete">Delete</a></td>
            <td><a href="/recipient/<%= data[a].id %>/edit">Edit</a></td>
        </tr>
        <% } %>
    </table>
